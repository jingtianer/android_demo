<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_card_bg">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <com.jingtian.demoapp.main.widget.RoundRectImageView
                android:id="@+id/image"
                android:transitionName="itemImage"
                app:radiusLeftTop="8dp"
                app:radiusRightTop="8dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/load_failed"
                android:layout_width="200dp"
                android:layout_height="240dp"/>
            <com.jingtian.demoapp.main.widget.RoundRectImageView
                android:id="@+id/rank_type"
                android:transitionName="itemTankType"
                app:radiusRightTop="8dp"
                android:layout_gravity="end|top"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            tools:text="标题"/>

        <com.jingtian.demoapp.main.widget.StarRateView
            android:id="@+id/star_rate"
            android:transitionName="itemStarRate"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>