<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/avatar_layout"
        android:layout_width="42dp"
        android:layout_height="42dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/avatar"
            android:src="@drawable/user"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatar_layout"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textColor="@color/color_comment_content"
        tools:text="\@用户名"/>

    <TextView
        android:id="@+id/log_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toEndOf="@+id/avatar_layout"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="评论评论评论评论评论评论评论评论评论评论评论评论评论评论"/>

    <TextView
        android:id="@+id/log_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/log_content"
        app:layout_constraintEnd_toEndOf="@id/log_content"
        app:layout_constraintTop_toBottomOf="@id/log_content"
        android:textAlignment="viewEnd"
        android:textSize="11sp"
        android:maxLines="1"
        android:layout_marginTop="4dp"
        tools:text="2025年7月8日"/>

</androidx.constraintlayout.widget.ConstraintLayout>